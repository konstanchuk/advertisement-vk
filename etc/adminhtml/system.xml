<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales">
            <group id="konstanchuk_advertisement_vk" translate="label" type="text" sortOrder="1000" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>Advertisement Vkontakte</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="position_script" translate="label" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Position Script</label>
                    <source_model>Konstanchuk\AdvertisementVk\Model\System\Config\PositionScript</source_model>
                </field>
                <field id="default_target_code" translate="label comment" type="text" sortOrder="30" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Default Vk Target Ads Code</label>
                </field>
            </group>
        </section>
    </system>
</config>